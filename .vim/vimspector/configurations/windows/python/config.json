{
    "configurations": {
        "Run file": {
            "adapter": "debugpy",
            "default": true,
            "configuration": {
                "request": "launch",
                "program": "${file}"
            },
            "breakpoints": {
                "exception": {
                    "caught": "",
                    "uncaught": "",
                    "raised": "",
                    "userUnhandled": ""
                }
            }
        },
        "pyunit": {
            "adapter": "debugpy",
            "configuration": {
                "request": "launch",
                "module": "unittest",
                "args": [
                    "-v",
                    "${TestName}"
                ]
            },
            "breakpoints": {
                "exception": {
                    "caught": "",
                    "uncaught": "Y",
                    "raised": "",
                    "userUnhandled": "Y"
                }
            }
        }
    }
}
